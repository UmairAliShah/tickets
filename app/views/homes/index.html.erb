<% content_for :title, "New App" %>
<!--Home Slider==================================== -->
<section id="slider">
  <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
    <!-- Indicators bullet -->
    <ol class="carousel-indicators">
      <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
      <li data-target="#carousel-example-generic" data-slide-to="1"></li>
    </ol>
    <!-- End Indicators bullet -->
    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
      <!-- single slide -->
      <div class="item active main_bg">
        <div class="carousel-caption">
          <h2 data-wow-duration="700ms" data-wow-delay="500ms" class="wow bounceInDown animated" style="margin-top:-1em;">Info<span> Fiji</span>!</h2>
          <h3 data-wow-duration="1000ms" class="wow slideInLeft animated"><span class="color">Directory in Your hands</span></h3>
          <h3 data-wow-duration="1000ms" class="wow slideInLeft animated"><span class="color">Fiji in Your hands</span></h3>
          <h3 data-wow-duration="1000ms" class="wow slideInLeft animated home_creating"><span class="color">!!In-Fiji!!By Fiji!!For Fijians!!</span></h3>
          <p data-wow-duration="1000ms" class="wow slideInRight animated home_creating">Creating networking opportunities for Fijian</p>
        </div>
      </div>
      <!-- end single slide -->
    </div>
    <!-- End Wrapper for slides -->
  </div>
</section>
<!--End Home SliderEnd==================================== -->

<!--Features==================================== -->
<section id="feature" class="features">
  <div class="container">
    <div class="row">
      <div class="sec-title text-center mb50 wow bounceInDown animated" data-wow-duration="500ms">
        <h2>Features</h2>
        <div class="devider"><i class="fa fa-heart-o fa-lg"></i></div>
      </div>
      <!-- service item -->
      <div class="col-md-4 wow fadeInLeft" data-wow-duration="500ms">
        <div class="service-item">
          <div class="service-icon">
            <i class="glyphicon glyphicon-phone" style="color:#2874A6;font-size:1.5em;"></i>
          </div>
          <div class="service-desc">
            <h3>User Friendly</h3>
            <p>Easy to use. Find any residential, professional or business near YOU by name, island or category in INFO-FIJI.</p>
          </div>
        </div>
      </div>
      <!-- end service item -->
      <!-- service item -->
      <div class="col-md-4 wow fadeInUp" data-wow-duration="500ms" data-wow-delay="500ms">
        <div class="service-item">
          <div class="service-icon">
            <i class="glyphicon glyphicon-flash" style="color:#2874A6;font-size:1.5em;"></i>
          </div>
          <div class="service-desc">
            <h3>Equal Visiblity</h3>
            <p>All the residential, professional and business profiles have equal preference in INFO-FIJI.</p>
          </div>
        </div>
      </div>
      <!-- end service item -->
      <!-- service item -->
      <div class="col-md-4 wow fadeInRight" data-wow-duration="500ms"  data-wow-delay="900ms">
        <div class="service-item">
          <div class="service-icon">
            <i class="glyphicon glyphicon-globe" style="color:#2874A6;font-size:1.5em;"></i>
          </div>
          <div class="service-desc">
            <h3>Business Categorisation</h3>
            <p>YOU can search any business by category and name, and INFO-FIJI will show YOU 100% authenticated business near YOU.</p>
          </div>
        </div>
      </div>
      <!-- end service item -->
    </div>
    <br><br><br><br>
  </div>
</section>
<!--End Features==================================== -->


<!--Some fun facts		==================================== -->
<section id="facts" class="facts">
  <div class="parallax-overlay">
    <div class="container">
      <div class="row number-counters">
        <center>
          <div class="sec-title text-center mb50 wow rubberBand animated" data-wow-duration="1000ms">
            <h2>Some Fun Facts</h2>
            <div class="devider"><i class="fa fa-heart-o fa-lg"></i></div>
          </div>
          <!-- first count item -->
          <div class="col-md-4 col-sm-6 col-xs-12 text-center wow fadeInUp animated" data-wow-duration="500ms">
            <div class="counters-item">
              <i class="residential"></i>
              <strong data-to="<%= @r%>">0</strong>
              <!-- Set Your Number here. i,e. data-to="56" -->
              <p>Residential Profiles</p>
            </div>
          </div>
          <div class="col-md-4 col-sm-6 col-xs-12 text-center wow fadeInUp animated" data-wow-duration="500ms" data-wow-delay="300ms">
            <div class="counters-item">
              <i class="professional"></i>
              <strong data-to="<%= @p%>">0</strong>
              <!-- Set Your Number here. i,e. data-to="56" -->
              <p>Professional Profiles</p>
            </div>
          </div>
          <div class="col-md-4 col-sm-6 col-xs-12 text-center wow fadeInUp animated" data-wow-duration="500ms" data-wow-delay="600ms">
            <div class="counters-item">
              <i class="business"></i>
              <strong data-to="<%= @b%>">0</strong>
              <!-- Set Your Number here. i,e. data-to="56" -->
              <p>Business Profiles</p>
            </div>
          </div>
        </center>
        <!-- end first count item -->
      </div>
    </div>
  </div>
</section>
<!--End Some fun facts		==================================== -->
